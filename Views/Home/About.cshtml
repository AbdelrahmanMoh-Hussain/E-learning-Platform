@{
    ViewData["Title"] = "About Us";
}

<!-- Header -->
<header class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4">About Us</h1>
        <p class="lead">Empowering Learners, Transforming Futures</p>
    </div>
</header>

<!-- About Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <!-- About Text -->
            <div class="col-lg-8">
                <h2 class="fw-bold">Our Mission</h2>
                <p class="lead">
                    At <strong>KSD Academy</strong>, we are committed to providing high-quality education accessible to everyone, everywhere. Our platform bridges the gap between learners and expert instructors, offering a diverse range of courses designed to enhance skills, foster growth, and unlock new opportunities.
                </p>
                <p>
                    Whether you're looking to advance in your career, develop a new skill, or explore personal interests, we offer courses tailored to fit your needs. Our mission is to empower learners of all backgrounds to achieve their educational and professional goals.
                </p>

                <h2 class="fw-bold mt-5">Why Choose Us?</h2>
                <ul class="list-unstyled lead">
                    <li>✓ Expert instructors with real-world experience</li>
                    <li>✓ Flexible learning paths to suit your schedule</li>
                    <li>✓ Interactive and engaging course content</li>
                    <li>✓ Affordable pricing with multiple payment options</li>
                    <li>✓ Certificate programs to showcase your achievements</li>
                </ul>
            </div>
        </div>

        <!-- Team Section (Optional) -->
        <div class="row mt-5">
            <div class="col-lg-12 text-center">
                <h2 class="fw-bold">Meet Our Team</h2>
            </div>
            <div class="col-md-4 text-center mt-4">
                <img class="rounded-circle" src="/images/member1.jpg" alt="Team Member 1" width="250" height="250">
                <h5 class="mt-3">John Doe</h5>
                <p class="text-muted">Founder & CEO</p>
            </div>
            <div class="col-md-4 text-center mt-4">
                <img class="rounded-circle" src="/images/member2.jpg" alt="Team Member 2" width="250" height="250">
                <h5 class="mt-3">Jane Smith</h5>
                <p class="text-muted">Chief Learning Officer</p>
            </div>
            <div class="col-md-4 text-center mt-4">
                <img class="rounded-circle" src="/images/member3.jpg" alt="Team Member 3" width="250" height="250">
                <h5 class="mt-3">Michael Lee</h5>
                <p class="text-muted">Head of Technology</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold">Ready to Start Learning?</h2>
        <p class="lead">Join thousands of learners around the world and take your skills to the next level with <strong>YourPlatformName</strong>.</p>
        <a href="/Home" class="btn btn-primary btn-lg">Explore Courses</a>
    </div>
</section>
